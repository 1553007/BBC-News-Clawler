{
	"allowed_domains" : ["bbc.com"],
	"language": ["en"],
	"start_urls": [
		"https://www.bbc.com/news/business/"
	],
	"rules": [
		{
			"allow": ["https://www.bbc.com/news/business*"],
			"follow": true,
			"callback": "parseItems"
		}
	],
	"paths": {
		"title" : ["//title/text()"],
        "author": ["//meta[@property='article:author']/@content", "//meta[@name='author']/@content"]
	}
}